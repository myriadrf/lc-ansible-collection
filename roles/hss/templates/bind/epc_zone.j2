$ORIGIN epc.mnc{{ hss_mnc_3 }}.mcc{{ hss_mcc }}.3gppnetwork.org.
$TTL 1W
@                       1D IN SOA       localhost. root.localhost. (
                                        1		; serial
                                        3H              ; refresh
                                        15M             ; retry
                                        1W              ; expiry
                                        1D )            ; minimum

                        1D IN NS        epcns
epcns                   1D IN A         {{ hss_dns_bind_addr }}

hss                     1D IN A         {{ hss_diameter_bind_addr }} 

mme                     1D IN A         {{ hss_mme_addr }}